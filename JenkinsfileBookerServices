pipeline {
    agent any
    environment {
        BASE_URL_BOOKER = 'https://restful-booker.herokuapp.com/'
        NAME_REPORT = 'report_yape.html'
        FILENAME = "reports/report_yape.html"
        PYTHON_COMMAND = isUnix() ? 'python3' : 'python'
        PIP_COMMAND = isUnix() ? 'pip3' : 'pip'
    }
    stages {
        stage('Installing') {
            steps {
                echo 'Installing..'
                sh "${PIP_COMMAND} --version"
                sh "${PIP_COMMAND} install -r requirements.txt"
            }
        }
        stage('All Tests...') {
            steps {
                echo 'All Tests..'
                sh "${PYTHON_COMMAND} Runner.py"
            }
 }
}
}
